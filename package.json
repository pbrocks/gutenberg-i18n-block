{
  "name": "gutenberg-i18n-block",
  "version": "0.1.0",
  "main": "block/block.js",
  "author": "Pascal Birchler",
  "devDependencies": {
    "@wordpress/babel-plugin-makepot": "^1.0.0",
    "@wordpress/babel-preset-default": "^1.1.2",
    "@wordpress/i18n": "^1.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.4"
  },
  "babel": {
    "presets": [
      "@wordpress/default"
    ],
    "plugins": [
      [
        "@wordpress/babel-plugin-makepot",
        {
          "output": "languages/gutenberg-i18n-block-js.pot"
        }
      ]
    ]
  },
  "scripts": {
    "build": "babel block/src/block.js -o block/block.js",
    "pot-to-php": "pot-to-php languages/gutenberg-i18n-block-js.pot languages/gutenberg-i18n-block-translations.php gutenberg-i18n-block",
    "makepot": "wp i18n make-pot ."
  }
}
